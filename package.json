{
  "private": true,
  "name": "css-equal-height-columns",
  "scripts": {
    "serve": "browser-sync start --server --files *.html *.min.js *.min.css",
    "script": "browserify -e ./script.js -o script.min.js",
    "watch:script": "onchange -i script.js -- npm run script",
    "style": "postcss --use autoprefixer ./style.css -o style.min.css",
    "watch:style": "onchange -i style.css -- npm run style",
    "start": "npm-run-all -p serve watch:script watch:style"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "browser-sync": "^2.14.0",
    "browserify": "^13.1.0",
    "npm-run-all": "^2.3.0",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.2"
  },
  "dependencies": {
    "jquery": "^3.1.0",
    "jquery-match-height": "^0.7.0"
  }
}
